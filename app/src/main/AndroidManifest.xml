<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lt.personal_stadiumbookingsystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeTeal"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.activity.AboutActivity"
            android:label="关于" />
        <activity
            android:name=".ui.activity.SettingActivity"
            android:label="设置" />
        <activity
            android:name=".ui.activity.ThemeActivity"
            android:label="主题" />
        <activity
            android:name=".ui.activity.AccountActivity"
            android:label="账户" />
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:label="注册" />
        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="登录" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="一个场馆"
            android:theme="@style/AppThemeTeal.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.SiteActivity"
            android:label="选择场地" />
        <activity
            android:name=".ui.activity.TimeActivity"
            android:label="选择时段" />
        <activity
            android:name=".ui.activity.OrderActivity"
            android:label="订单详情" />
    </application>

</manifest>