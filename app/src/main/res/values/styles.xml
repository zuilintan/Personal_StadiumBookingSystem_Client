<resources>

    <style name="AppThemeTeal" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorTeal500</item>
        <item name="colorPrimaryDark">@color/colorTeal700</item>
        <item name="colorAccent">@color/colorPink600</item>
    </style>

    <style name="AppThemeTeal.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorTeal500</item>
        <item name="colorPrimaryDark">@color/colorTeal700</item>
        <item name="colorAccent">@color/colorPink600</item>
    </style>

    <style name="AppThemeIndigo" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorIndigo500</item>
        <item name="colorPrimaryDark">@color/colorIndigo700</item>
        <item name="colorAccent">@color/colorPinkA200</item>
    </style>

    <style name="AppThemeIndigo.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorIndigo500</item>
        <item name="colorPrimaryDark">@color/colorIndigo700</item>
        <item name="colorAccent">@color/colorPinkA200</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
